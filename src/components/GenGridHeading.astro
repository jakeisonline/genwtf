---
import { cn } from "@/lib/utils"

const { class: className, ...props } = Astro.props

const year = props["data-year"]
---

<div
  class={cn(
    "border-l pl-2 border-gray-300 border-dotted select-none text-sm md:text-base whitespace-nowrap relative min-w-2 h-6",
    year % 5 === 0 && "border-solid border-l-3",
    className,
  )}
  {...props}
>
  {
    // If year is divisable by 5, show year
    year % 5 === 0 && <span class="absolute -top-6.5 -left-5">{year}</span>
  }
</div>
