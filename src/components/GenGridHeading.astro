---
import { cn } from "@/lib/utils"

const { class: className, ...props } = Astro.props

const year = props["data-year"]
---

<div
  class={cn(
    "border-l pl-2 border-gray-300 border-dotted select-none text-sm md:text-base whitespace-nowrap ",
    className,
  )}
  {...props}
>
  {
    // If year is divisable by 5, show year
    year % 5 === 0 && <span class="">{year}</span>
  }
</div>
