---
import type { Generation } from "@/lib/types"

interface Props {
  generations: Generation[]
}

const { generations }: Props = Astro.props
---

<div
  class="sticky left-9 top-12 z-10 ml-9 flex h-0 flex-col gap-14 text-left md:top-10 md:gap-12"
>
  {
    generations
      .map((generation) => (
        <div class="text-xs md:text-base">
          {generation.name}
          <span class="text-xs text-gray-500">
            {generation.start} - {generation.end}
          </span>
        </div>
      ))
      .reverse()
  }
</div>
